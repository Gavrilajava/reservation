=form_for @booking, url: bookings_path do |f|
  %fieldset.fieldset
    %legend Book the tables
    =label_tag 'name', 'Name of the guest:'
    =f.text_field :name
    =label_tag 'persons', 'Number of guests:'
    =f.number_field :persons
    =label_tag 'time', 'Date and time of reservation:'
    =f.datetime_local_field :time, value: (Time.now + 1.hours).beginning_of_hour.strftime('%Y-%m-%dT%H:%M')
    =f.submit class: "button"
%h2 All booked tables:
%table
  %thead
    %tr
      %th Date
      %th Time
      %th Person
      %th Table #
      %th Capacity
      %th Guests
      %th Cancel
  %tbody
    -@bookings.each do |b|
      %tr
        %td #{b.time.to_date}
        %td #{b.time.strftime("%I:%M %P")}
        %td #{b.name}
        %td #{b.table.number}
        %td #{b.table.capacity}
        %td #{b.persons}
        %td 
          =button_to "Cancel", { action: "destroy", id: b.id}, method: :delete, class: "button secondary tiny", data: {confirm: "Are you sure?" }
